<div class='home-container'>
  <div class='home-header-background'>
    <div class='home-header'>
      <%= link_to 'Add bookmark', new_list_bookmark_path(@list), class:'btn category-btn' %>

      <h3><%= @list.name %> movies</h3>
    </div>
  </div>

  <div class='movie-container'>
    <% @list.bookmarks.each do |bookmark| %>
      <div class = 'movie'>
        <img src="<%= bookmark.movie.poster_url %>" alt="" width="300">
        <div class='movie-text'>
          <h4><%= bookmark.movie.title %></h4>
          <h5><%= bookmark.movie.rating%>*</h5>
          <p><%= bookmark.movie.overview %></p>
          <p><%= bookmark.comment %></p>
          <p><%= link_to 'Delete', bookmark_path(bookmark), method: :delete, data: { confirm: 'Are you sure?' }, class:'btn delete-btn' %></p>
        </div>
      </div>
    <% end %>
  </div>

  <p><%= link_to 'Back', lists_path, class: 'btn' %></p>
</div>
