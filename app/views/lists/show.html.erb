<div class='container'>

<p><%= link_to 'Add bookmark', new_list_bookmark_path(@list) %></p>

<h3><%= @list.name %></h3>

<% @list.bookmarks.each do |bookmark| %>
<div class = 'movie'>
  <img class="img-thumbnail" src="<%= bookmark.movie.poster_url %>" alt="" width="300">
  <h3><%= bookmark.movie.title %> (<%= bookmark.movie.rating%>*)</h3>
  <p><%= bookmark.movie.overview %></p>
  <p><%= bookmark.comment %></p>
  <p><%= link_to 'Delete', bookmark_path(bookmark), method: :delete, data: { confirm: 'Are you sure?' } %></p>
</div>
<% end %>

<p><%= link_to 'Back', lists_path, class: 'btn' %></p>

</div>
